{
    "printWidth": 120,
    "tabWidth": 2,
    "removeTrailingWhitespace": true,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParent": "always",
    "parser": "typescript",
    "proseWrap": "always",
    "endOfLine": "auto",
    "plugins": ["prettier-plugin-sort-imports"],
    "importOrder": ["^react$", "^next", "<THIRD_PARTY_MODULES>", "^[./]"],
    "importOrderSeparation": true
  }